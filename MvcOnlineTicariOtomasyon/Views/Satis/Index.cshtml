@using MvcOnlineTicariOtomasyon.Models.Sınıflar;
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Satışlar</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Satisid</td>
            <td>@s.Urunler.Urunad</td>
            <td>@s.Cariler.CariAd @s.Cariler.CariSoyad</td>
            <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad</td>
            <td>@s.Adet</td>
            <td>@s.Fiyat</td>
            <td>@s.ToplamTutar</td>
            <td>@s.Tarih</td>
            <td><a href="/Satis/SatisGetir/@s.Satisid" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/@s.Personelid" class="btn btn-warning">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış</a>